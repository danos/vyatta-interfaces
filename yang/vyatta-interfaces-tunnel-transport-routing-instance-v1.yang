	revision 2017-12-05 {
		description "Initial revision of version 1.";
	}

	augment /if:interfaces/tun:tunnel/tun:transport {
		leaf routing-instance {
		        must "(/if:interfaces/tun:tunnel/tun:encapsulation = 'vxlan') or
		              (/if:interfaces/tun:tunnel/tun:encapsulation = 'vxlan-gpe')" {
		             error-message "Transport routing instance can only be specified 
		                            when the encapsulation is vxlan or vxlan-gpe";
		        }
		        type leafref {
		             path "/rd:routing/rd:routing-instance/rd:instance-name";
		        }
		        configd:help "Routing Domain used for the transport network";
		}
	}
}
