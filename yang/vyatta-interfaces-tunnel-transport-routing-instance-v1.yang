	namespace "urn:vyatta.com:mgmt:vyatta-interfaces-tunnel-transport-routing-instance:1";
	prefix vyatta-interfaces-tunnel-transport-routing-instance-v1;

	import vyatta-interfaces-v1 {
		prefix if;
	}
	import configd-v1 {
		prefix configd;
	}
	import vyatta-interfaces-tunnel-v1 {
		prefix tun;
	}
	import vyatta-routing-v1 {
		prefix rd;
	}

	organization "AT&T";
	contact
