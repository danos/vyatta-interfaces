	namespace "urn:vyatta.com:mgmt:vyatta-op-clear-interfaces-switch:1";
	prefix vyatta-op-clear-interfaces-switch-v1;

	import vyatta-opd-extensions-v1 {
		prefix opd;
	}
	import vyatta-op-clear-v1 {
		prefix clear;
	}
	import vyatta-op-clear-interfaces-v1 {
		prefix if;
	}
	import vyatta-types-v1 {
		prefix types;
	}

	organization "AT&T Inc.";
	contact
