		Defines the top 'switch' level under 'clear interfaces' for operational CLI";

	revision 2018-07-17 {
		description "Initial version";
	}

	opd:augment /clear:clear/if:interfaces {
		opd:command switch {
			opd:help "Clear switch interface information";

			opd:argument if-name {
				opd:help "Clear interface information for a given switch interface";
				opd:allowed 'vyatta-interfaces.pl --show switch --filter-out "\."';
				type string {
					pattern 'sw[0-9]+';
					opd:pattern-help "<swN>";
				}

				opd:command vlan {
					opd:help "Clear VLAN information for specified switch";

					opd:argument vlan-id {
						opd:help "VLAN number";
						type types:vlan;

						opd:command statistics {
							opd:help "Clear statistics for specifed VLAN on specified switch";
							opd:on-enter "vyatta-switch-op --action=clear-vlan-stats --switch=$4 --vlan=$6";
						}
					}
					opd:command statistics {
						opd:help "Clear statistics for VLANs on the specified switch";
						opd:on-enter 'vyatta-switch-op --action=clear-vlan-stats --switch=$4';
					}
				}
			}
		}
	}
}
